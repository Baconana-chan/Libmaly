{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "libmaly",
  "version": "1.3.0",
  "identifier": "com.baconana.libmaly",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "libmaly"
        ]
      }
    },
    "cli": {
      "description": "LIBMALY game launcher CLI",
      "subcommands": {
        "launch": {
          "description": "Launch a game by name",
          "args": [
            {
              "name": "name",
              "description": "Game title to launch (exact or partial match)",
              "required": true,
              "takesValue": true,
              "index": 1
            }
          ]
        }
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "libmaly",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "maximized": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
